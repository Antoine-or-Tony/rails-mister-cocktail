<div class="container text-center">
  <h1>All cocktails</h1>
  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
    <button type="button" class="btn btn-success"><%= link_to "create cocktail", new_cocktail_path%></button>
  </ul>
</div>
